{
  "manifest_version": 3,
  "name": "Yahoo掲示板ユーザーブロックくん",
  "version": "1.3.0",
  "description": "Yahoo掲示板の任意のユーザーを人数制限なくブロックできる拡張機能",
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://finance.yahoo.co.jp/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "yahoo block.png",
    "48": "yahoo block.png",
    "128": "yahoo block.png"
  }
}
