{
  "manifest_version": 3,
  "name": "Yahoo掲示板ユーザーブロックくん",
  "version": "1.0",
  "description": "Yahoo掲示板のユーザーをブロックする拡張機能",
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://finance.yahoo.co.jp/*"],
      "js": ["content.js"]
    }
  ]
}
